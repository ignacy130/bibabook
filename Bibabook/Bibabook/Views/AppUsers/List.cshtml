@using Contract.Enums
@model IEnumerable<Bibabook.Implementation.Models.AppUser>

@{
    ViewBag.Title = "Lista znajomych";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Avatar)
            @if (item.Sex == Sex.Female)
            {
                <img class=" img-circle" src="~/Content/UserIcon/Female.png" style="width: 50px;height:50px;" />
            }
            else
            {
                <img class="img-circle" src="~/Content/UserIcon/Male.png" style="width: 50px;height:50px;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.ActionLink("Profil użytkownika", "Details", new { id=item.AppUserID })
        </td>
    </tr>
}

</table>
