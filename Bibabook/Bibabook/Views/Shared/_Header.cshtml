@{
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "main-content",
        InsertionMode = InsertionMode.Replace,
    };
}

<header class="wrapper navbar-fixed-top">
    <div class="container">
        @Html.ActionLink("Bibabook", "Index", "Home", null, htmlAttributes: new { @class = "logo" })

        <!-- SearchBox -->
        <nav class="search-box right">
            @using (Ajax.BeginForm("Search", "Search", options))
            {
                <div>
                    <div style="width: 280px; float: left; padding: 12px 0 14px;">
                        @Html.TextBox("name", "", new { @class = "form-control" })
                    </div>
                    <button class="btn btn-default" style="width: 100px; margin: 12px 6px 14px;" type="submit">Szukaj</button>
                </div>
            }
        </nav>
        <!-- End: SearchBox -->
        <!--
            Miejsce na linki dostępne dla wszystkich użytkowników (gości).
            Tylko czy na dobrą sprawę czy jest jakikolwiek, który faktycznie
            powinien zostać tutaj dodany?
        -->
        @Html.Partial("_UserPanel")
    
</header>


